@model IEnumerable<LandingPage.Models.News>
@{
    ViewBag.Title = "True North - Big Data, Small Task";
}

<div class="row">
    <div class="col-md-4">
        <h2>True North - Big Data, Small Task</h2>
        <p class="lead">
            Vi valde att skapa något nytt då vi tyckte att de befintliga aktörerna inte erbjuder sina kunder rättvisa produkter I dagens moderna samhälle.</p><p> Jobbar du inom management consulting, revision, M&A, Venture Capital, Private Equity och vill spara tid så har du förmodligen allt att vinna genom att testa vår nya plattform. Vi har byggt något som haft kundernas behov i fokus från första programmeringsraderna.
        </p>
       <table style="margin-bottom:18px;">
           <tr><a class="btn btn-primary btn-sm  " href='@Url.Action("Products","Home")'>Lär dig mer</a></tr>
       </table>
            
     
            


    </div>
    <div class="col-md-8">

        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="~/Content/images/bi1.png" alt="BI at best">
                </div>

                <div class="item">
                    <img src="~/Content/images/bi2.png" alt="Best calculations">
                </div>

                <div class="item">
                    <img src="~/Content/images/bi3.png" alt="Easier to understand">
                </div>

                <div class="item">
                    <img src="~/Content/images/bi4.png" alt="Tnbi, for a more effective tomorrow">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

</div>

<div class="row">
    <div class="col-md-12">
        <h3 class="text-left">Senaste nyheterna!</h3>
    </div>
    @*<div class="col-md-3"></div>*@
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="well">
                    <h4>
                        <a href='@Url.Action("Details", "News", new { id=item.PostID })'>
                            @Html.DisplayFor(modelItem => item.Title)
                        </a>
                    </h4>
                    <p class="text-muted">
                        @Html.DisplayFor(modelItem => item.PublishedDate)
                    </p>
                    <p>
                        @Html.DisplayFor(modelItem => item.Content)
                    </p>
                </div>
            </div>
        }

    }


</div>
